generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  stockCode   String  @unique
  name        String? // Mapped from description or webdescription
  description String
  sku         String?
  price       Float
  origin      String?
  length      Float?
  width       Float?
  size        String? // Computed as `${length} x ${width}`
  stockLevel  Int
  // Add more fields as needed, e.g., createdAt DateTime @default(now())
}
